[
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.vimrc": {
                "path": "vim/vimrc",
                "relink": "true"
            },
            "~/.Xresources": {
                "path": "Xresources/Xresources"
            },
            "~/.xinitrc": {
                "path": "Xinit/xinitrc"
            },
            "~/.config/fish": {
                "path": "fish",
                "relink": "true"
            }
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    }
]
